<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="log_message_wizard_view">
            <field name="name">log.message.wizard.view</field>
            <field name="model">log.message.wizard</field>
            <field name="arch" type="xml">
                <form string="Compose Message">
                    <group>
                        <field name="message" options="{'style-inline': true}" placeholder="Rejection reason..."/>
                    </group>
                    <footer>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" />
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
