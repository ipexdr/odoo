<odoo>
  <data>
    <record model="ir.ui.view" id="sale_order_view_inherit">
      <field name="name">sale.order.view.inherit</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
          <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="after">

              <field name="list_price" groups="quote_fields.quote_fields_manager"/>
              <field name="vendor_discount" widget="percentage" groups="quote_fields.quote_fields_manager"/>
              <field name="vendor_discounted" widget="monetary" groups="quote_fields.quote_fields_manager"/>
              <field name="fob_total" widget="monetary" groups="quote_fields.quote_fields_manager"/>
              <field name="tariff" widget="percentage" groups="quote_fields.quote_fields_manager"/>
              <field name="tariff_cost" widget="monetary" groups="quote_fields.quote_fields_manager"/>
              <field name="total_tariff_cost" widget="monetary" groups="quote_fields.quote_fields_manager"/>
              <field name="cost" widget="monetary" groups="quote_fields.quote_fields_manager"/>
              <field name="admin_cost" widget="monetary" groups="quote_fields.quote_fields_manager"/>
              <field name="final_cost" widget="monetary" groups="quote_fields.quote_fields_manager"/>
              <field name="total_final_cost" widget="monetary" groups="quote_fields.quote_fields_manager"/>
              <field name="margin" widget="percentage" groups="quote_fields.quote_fields_manager"/>
              <field name="sell_price" widget="monetary" groups="quote_fields.quote_fields_manager"/>

          </xpath>
<!--           <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
                <attribute name="groups">quote_fields.quote_fields_manager</attribute>
          </xpath> -->
      </field>
    </record>
  </data>
</odoo>